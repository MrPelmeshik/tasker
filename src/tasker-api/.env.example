# ===========================================
# Tasker API — переменные окружения (пример)
# ===========================================
# Скопируйте в .env и задайте значения. В ASP.NET Core ключи с __ задают вложенные секции (например Jwt__SecretKey).

# Окружение (Development / Production)
ASPNETCORE_ENVIRONMENT=Development

# База данных — единственный источник: ConnectionStrings__DefaultConnection.
# Плейсхолдер ${VAR} раскрывается из переменной окружения.
ConnectionStrings__DefaultConnection=Host=localhost;Port=5432;Database=tasker_db;Username=postgres;Password=${DB_PG_PWD_POSTGRES}

# JWT
Jwt__SecretKey=
Jwt__Issuer=TaskerAPI
Jwt__Audience=TaskerApp
Jwt__AccessTokenLifetimeMinutes=60
Jwt__RefreshTokenLifetimeDays=7
Jwt__ClockSkewSeconds=30
Jwt__RequireHttpsMetadata=false

# CORS (в Production задать обязательно)
Cors__AllowedOriginsCsv=http://localhost:3000

# Очистка refresh-токенов (опционально)
RefreshTokenCleanup__InitialDelayMinutes=2
RefreshTokenCleanup__IntervalMinutes=60
RefreshTokenCleanup__RevokedMaxAgeDays=7

# SignalR (опционально)
SignalR__HubPath=/hubs/tasker
SignalR__HubPathBase=/hubs
SignalR__MaxJoinAreasCount=100

# Аутентификация (опционально)
Auth__CookiePath=/api/auth
Auth__RefreshTokenCookieName=refreshToken
Auth__PasswordHasherIterations=100000

# Задачи — макс. размер страницы отчёта активностей (опционально)
Tasks__MaxActivitiesPageSize=500
